{
  "name": "@modern-js/libuild",
  "version": "0.1.0",
  "description": "A tool for building modern JavaScript library",
  "license": "MIT",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "bin": {
    "libuild": "cli.js"
  },
  "files": [
    "dist",
